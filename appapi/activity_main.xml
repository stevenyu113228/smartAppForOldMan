<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="377dp"
            android:layout_height="216dp"
            android:layout_marginBottom="72dp"
            android:layout_marginEnd="-1dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@+id/speechButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/bar" />

        <ImageButton
            android:id="@+id/speechButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="50dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@+id/foodButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/microphone" />

        <ImageButton
            android:id="@+id/medicineButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="50dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@+id/emsButton"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/medicine" />

        <ImageButton
            android:id="@+id/emsButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="50dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@+id/actButton"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/hospital" />

        <ImageButton
            android:id="@+id/foodButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="50dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@+id/actButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/cook" />

        <ImageButton
            android:id="@+id/easyButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="47dp"
            android:layout_marginStart="50dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/sport" />

        <ImageButton
            android:id="@+id/actButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="47dp"
            android:layout_marginEnd="50dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/school" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="68dp"
            android:layout_marginTop="15dp"
            android:background="@android:color/transparent"
            android:text="陳大明"
            android:textColor="@android:color/white"
            android:textSize="35sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dateview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="08/23"
            android:textColor="@android:color/white"
            android:textSize="70sp"
            app:layout_constraintEnd_toStartOf="@+id/weekview"
            app:layout_constraintTop_toBottomOf="@+id/username" />

        <TextView
            android:id="@+id/weekview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="104dp"
            android:text="(三)"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/username" />

        <ImageButton
            android:id="@+id/settingButton"
            android:layout_width="120dp"
            android:layout_height="138dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:color/transparent" />


    </android.support.constraint.ConstraintLayout>
</LinearLayout>
